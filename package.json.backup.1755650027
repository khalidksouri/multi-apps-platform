{
  "name": "math4child",
  "version": "4.2.0",
  "description": "Math4Child v4.2.0 - Révolution Éducative Mondiale",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:production",
    "start": "next start",
    "lint": "next lint --max-warnings 100",
    "type-check": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "clean": "rm -rf .next out .turbo",
    "build:capacitor": "npm run build && npx cap sync",
    "android:build": "npx cap build android",
    "ios:build": "npx cap build ios",
    "build:no-lint": "npm run pre-build && SKIP_LINT=true SKIP_TYPE_CHECK=true next build",
    "build:force": "npm run pre-build && SKIP_LINT=true SKIP_TYPE_CHECK=false next build",
    "lint:fix": "next lint --fix",
    "lint:check": "next lint --max-warnings 0",
    "lint:ignore": "echo \"ESLint ignoré\"",
    "build:check": "tsc --noEmit && next build",
    "build:safe": "npm run build:static || npm run build:fallback",
    "type-check:watch": "tsc --noEmit --skipLibCheck --watch",
    "build:production": "npm run pre-build && next build",
    "build:dev": "npm run pre-build && SKIP_LINT=true next build",
    "build:feature": "npm run pre-build && npm run build:with-features",
    "build:preview": "npm run pre-build && npm run build:minimal",
    "build:with-fallback": "npm run build:production || npm run build:force || npm run build:no-lint",
    "build:minimal": "npm run pre-build && npm run build:no-lint",
    "build:with-features": "npm run pre-build && npm run enable-features && next build",
    "pre-build": "npm run clean && npm run check-deps",
    "check-deps": "npm ls --depth=0 || true",
    "enable-features": "echo 'Enabling experimental features...'",
    "diagnose": "npm run diagnose:env && npm run diagnose:deps",
    "diagnose:env": "node -v && npm -v && echo $NODE_ENV",
    "diagnose:deps": "npm ls @typescript-eslint/parser @typescript-eslint/eslint-plugin eslint typescript || true",
    "health-check": "npm run diagnose && npm run lint:check && npm run type-check",
    "build:static": "next build",
    "build:fallback": "mkdir -p out && echo \"<!DOCTYPE html><html><head><title>Math4Child</title></head><body><h1>Math4Child v4.2.0 - Chargement...</h1></body></html>\" > out/index.html",
    "export": "next build"
  },
  "dependencies": {
    "@stripe/stripe-js": "^1.54.0",
    "@types/three": "^0.179.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.263.1",
    "next": "^14.2.31",
    "react": "^18",
    "react-dom": "^18",
    "stripe": "^12.0.0",
    "three": "^0.179.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.21",
    "critters": "^0.0.16",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.31",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "author": "Math4Child <support@math4child.com>",
  "license": "MIT",
  "homepage": "https://www.math4child.com"
}