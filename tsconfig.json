{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@multiapps/ui": ["./packages/ui/src"],
      "@multiapps/shared": ["./packages/shared/src"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "tests/features/unitflip/unit-conversion.feature", "tests/features/budgetcron/budget-management.feature", "tests/features/ai4kids/learning-modules.feature", "tests/features/multiai/ai-services.feature"],
  "exclude": ["node_modules", "**/node_modules", "**/.next", "**/dist"]
}