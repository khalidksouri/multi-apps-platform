{
  "compilerOptions": {
    /* ===== CONFIGURATION DE BASE ===== */
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    
    /* ===== STRICT TYPE CHECKING ===== */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": true,
    
    /* ===== MODULES ===== */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    /* ===== EMIT ===== */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": false,
    "downlevelIteration": true,
    "importHelpers": true,
    
    /* ===== JAVASCRIPT SUPPORT ===== */
    "allowJs": true,
    "checkJs": false,
    
    /* ===== EDITOR SUPPORT ===== */
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    
    /* ===== INTEROP CONSTRAINTS ===== */
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    
    /* ===== ADVANCED ===== */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    /* ===== PATH MAPPING ===== */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@features/*": ["tests/features/*"],
      "@steps/*": ["tests/steps/*"],
      "@support/*": ["tests/support/*"],
      "@fixtures/*": ["tests/fixtures/*"],
      "@utils/*": ["tests/utils/*"],
      "@config/*": ["config/*"],
      "@ai4kids/*": ["src/ai4kids/*"],
      "@multiai/*": ["src/multiai/*"],
      "@budgetcron/*": ["src/budgetcron/*"],
      "@unitflip/*": ["src/unitflip/*"],
      "@postmath/*": ["src/postmath/*"]
    },
    
    /* ===== TYPE ACQUISITION ===== */
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      "jest",
      "playwright",
      "@cucumber/cucumber"
    ]
  },
  
  /* ===== INCLUSION/EXCLUSION ===== */
  "include": [
    "src/**/*",
    "tests/**/*",
    "*.config.ts",
    "*.config.js",
    "scripts/**/*",
    "types/**/*"
  ],
  
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "reports",
    "test-results",
    "playwright-report",
    "**/*.d.ts",
    "**/.next/**",
    "**/out/**"
  ],
  
  /* ===== TS-NODE CONFIGURATION ===== */
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "files": true,
    "experimentalSpecifierResolution": "node"
  },
  
  /* ===== WATCHOPTIONS ===== */
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": [
      "**/node_modules",
      "**/dist",
      "**/reports"
    ]
  },
  
  /* ===== BUILD OPTIONS ===== */
  "buildOptions": {
    "dry": false,
    "force": false,
    "verbose": false
  }
}