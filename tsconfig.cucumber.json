{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist-tests"
  },
  "include": [
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-tests"
  ]
}
