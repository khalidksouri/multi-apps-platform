{
  "name": "multi-apps-platform",
  "version": "1.0.0",
  "description": "Workspace multi-applications avec TypeScript et Playwright",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:postmath\" \"npm run dev:unitflip\" \"npm run dev:budgetcron\" \"npm run dev:ai4kids\" \"npm run dev:multiai\"",
    "dev:postmath": "cd apps/postmath && npm run dev",
    "dev:unitflip": "cd apps/unitflip && npm run dev",
    "dev:budgetcron": "cd apps/budgetcron && npm run dev",
    "dev:ai4kids": "cd apps/ai4kids && npm run dev",
    "dev:multiai": "cd apps/multiai && npm run dev",
    "build": "npm run build:packages && npm run build:apps",
    "build:packages": "npm run build -w packages/shared",
    "build:apps": "npm run build -w apps/postmath -w apps/unitflip -w apps/budgetcron -w apps/ai4kids -w apps/multiai",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:bdd": "TS_NODE_PROJECT=tsconfig.cucumber.json npx cucumber-js",
    "test:bdd:smoke": "TS_NODE_PROJECT=tsconfig.cucumber.json npx cucumber-js tests/features/smoke.feature --require 'tests/steps/**/*.ts' --require 'tests/support/**/*.ts' --require-module ts-node/register",
    "test:bdd:ai4kids": "TS_NODE_PROJECT=tsconfig.cucumber.json npx cucumber-js tests/features/ai4kids/*.feature --require 'tests/steps/**/*.ts' --require 'tests/support/**/*.ts' --require-module ts-node/register",
    "test:bdd:multiai": "TS_NODE_PROJECT=tsconfig.cucumber.json npx cucumber-js tests/features/multiai/*.feature --require 'tests/steps/**/*.ts' --require 'tests/support/**/*.ts' --require-module ts-node/register",
    "test:bdd:budgetcron": "TS_NODE_PROJECT=tsconfig.cucumber.json npx cucumber-js tests/features/budgetcron/*.feature --require 'tests/steps/**/*.ts' --require 'tests/support/**/*.ts' --require-module ts-node/register",
    "test:bdd:unitflip": "TS_NODE_PROJECT=tsconfig.cucumber.json npx cucumber-js tests/features/unitflip/*.feature --require 'tests/steps/**/*.ts' --require 'tests/support/**/*.ts' --require-module ts-node/register",
    "test:bdd:postmath": "TS_NODE_PROJECT=tsconfig.cucumber.json npx cucumber-js tests/features/postmath/*.feature --require 'tests/steps/**/*.ts' --require 'tests/support/**/*.ts' --require-module ts-node/register",
    "test:bdd:all": "TS_NODE_PROJECT=tsconfig.cucumber.json npx cucumber-js tests/features/**/*.feature --require 'tests/steps/**/*.ts' --require 'tests/support/**/*.ts' --require-module ts-node/register",
    "test:bdd:all-apps": "TS_NODE_PROJECT=tsconfig.cucumber.json npx cucumber-js tests/features/all-apps-smoke.feature --require 'tests/steps/**/*.ts' --require 'tests/support/**/*.ts' --require-module ts-node/register --format progress-bar",
    "test:bdd:complete": "./scripts/test-all-apps.sh",
    "test:bdd:simple": "TS_NODE_PROJECT=tsconfig.cucumber.json npx cucumber-js --require-module ts-node/register --require 'tests/support/*.ts' --require 'tests/steps/**/*.ts' --format progress-bar",
    "test:security": "./scripts/validate-security.sh",
    "lint": "eslint apps packages --ext .ts,.tsx,.js,.jsx --ignore-path .gitignore",
    "lint:fix": "eslint apps packages --ext .ts,.tsx,.js,.jsx --fix --ignore-path .gitignore",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf node_modules/.cache packages/*/dist apps/*/dist apps/*/.next test-results dist-tests",
    "setup": "./scripts/dev-setup.sh"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@playwright/test": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.0",
    "cucumber-html-reporter": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-plugin-security": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
