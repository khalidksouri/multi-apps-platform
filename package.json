{
  "name": "multi-app-testing-suite",
  "version": "1.0.0",
  "description": "ðŸš€ Suite de tests BDD complÃ¨te pour workspace monorepo avec 5 applications Next.js",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "___COMMENT_BUILD___": "=== Scripts de build et setup ===",
    "clean": "rimraf dist reports coverage test-results playwright-report",
    "clean:reports": "rimraf reports test-results playwright-report",
    "clean:deps": "rimraf node_modules package-lock.json",
    "build": "npm run build:packages && npm run build:apps",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "postinstall": "playwright install",
    
    "___COMMENT_PACKAGES___": "=== Build des packages ===",
    "build:packages": "npm run build --workspace=packages/shared && npm run build --workspace=packages/ui",
    "build:apps": "concurrently \"npm run build:ai4kids\" \"npm run build:multiai\" \"npm run build:budgetcron\" \"npm run build:unitflip\" \"npm run build:postmath\"",
    "build:ai4kids": "npm run build --workspace=ai4kids-app",
    "build:multiai": "npm run build --workspace=multiai-app", 
    "build:budgetcron": "npm run build --workspace=budgetcron-app",
    "build:unitflip": "npm run build --workspace=unitflip-app",
    "build:postmath": "npm run build --workspace=postmath-app",
    
    "___COMMENT_APPS___": "=== DÃ©marrage des applications ===",
    "start:ai4kids": "cd apps/ai4kids && npm run dev",
    "start:multiai": "cd apps/multiai && npm run dev",
    "start:budgetcron": "cd apps/budgetcron && npm run dev",
    "start:unitflip": "cd apps/unitflip && npm run dev",
    "start:postmath": "cd apps/postmath && npm run dev",
    "start:all": "concurrently --kill-others \"npm run start:ai4kids\" \"npm run start:multiai\" \"npm run start:budgetcron\" \"npm run start:unitflip\" \"npm run start:postmath\"",
    "start:all-ci": "concurrently --kill-others --success first \"npm run start:ai4kids\" \"npm run start:multiai\" \"npm run start:budgetcron\" \"npm run start:unitflip\" \"npm run start:postmath\"",
    
    "___COMMENT_DEV___": "=== DÃ©veloppement ===",
    "dev": "npm run dev:all",
    "dev:all": "concurrently --kill-others --names \"ai4kids,multiai,budgetcron,unitflip,postmath\" --prefix-colors \"cyan,magenta,yellow,green,blue\" \"npm run dev:ai4kids\" \"npm run dev:multiai\" \"npm run dev:budgetcron\" \"npm run dev:unitflip\" \"npm run dev:postmath\"",
    "dev:ai4kids": "npm run dev --workspace=ai4kids-app",
    "dev:multiai": "npm run dev --workspace=multiai-app",
    "dev:budgetcron": "npm run dev --workspace=budgetcron-app",
    "dev:unitflip": "npm run dev --workspace=unitflip-app",
    "dev:postmath": "npm run dev --workspace=postmath-app",
    
    "___COMMENT_TESTS_BASE___": "=== Tests de base ===",
    "test": "cucumber-js",
    "test:help": "cucumber-js --help",
    "test:dry-run": "cucumber-js --dry-run",
    "test:all": "cucumber-js --profile all",
    "test:smoke": "cucumber-js --profile smoke",
    "test:regression": "cucumber-js --profile regression",
    "test:nightly": "cucumber-js --profile nightly",
    
    "___COMMENT_APPS_TESTS___": "=== Tests par application ===",
    "test:ai4kids": "cucumber-js --profile ai4kids",
    "test:ai4kids:smoke": "cucumber-js --tags '@ai4kids and @smoke'",
    "test:multiai": "cucumber-js --profile multiai",
    "test:multiai:smoke": "cucumber-js --tags '@multiai and @smoke'",
    "test:budgetcron": "cucumber-js --profile budgetcron",
    "test:budgetcron:smoke": "cucumber-js --tags '@budgetcron and @smoke'",
    "test:unitflip": "cucumber-js --profile unitflip",
    "test:unitflip:smoke": "cucumber-js --tags '@unitflip and @smoke'",
    "test:postmath": "cucumber-js --profile postmath",
    "test:postmath:smoke": "cucumber-js --tags '@postmath and @smoke'",
    
    "___COMMENT_TYPE_TESTS___": "=== Tests par type ===",
    "test:positive": "cucumber-js --profile positive",
    "test:negative": "cucumber-js --profile negative",
    "test:edge-case": "cucumber-js --profile edge-case",
    "test:twisted-case": "cucumber-js --profile twisted-case",
    "test:boundary": "cucumber-js --tags '@boundary'",
    
    "___COMMENT_SPECIALIZED___": "=== Tests spÃ©cialisÃ©s ===",
    "test:performance": "cucumber-js --profile performance",
    "test:perf": "npm run test:performance",
    "test:accessibility": "cucumber-js --profile accessibility",
    "test:a11y": "npm run test:accessibility",
    "test:security": "cucumber-js --profile security",
    "test:sec": "npm run test:security",
    "test:mobile": "cucumber-js --profile mobile",
    "test:tablet": "cucumber-js --profile tablet",
    "test:responsive": "cucumber-js --tags '@mobile or @responsive'",
    
    "___COMMENT_EXECUTION___": "=== Modes d'exÃ©cution ===",
    "test:parallel": "cucumber-js --parallel 4 --tags 'not @sequential'",
    "test:sequential": "cucumber-js --profile sequential",
    "test:fast": "cucumber-js --profile fast",
    "test:debug": "cucumber-js --profile debug",
    "test:verbose": "cucumber-js --format-options '{\"colorsEnabled\": true}'",
    "test:quiet": "cucumber-js --format progress",
    
    "___COMMENT_ENV___": "=== Tests par environnement ===",
    "test:dev": "NODE_ENV=development cucumber-js --profile dev",
    "test:staging": "NODE_ENV=staging cucumber-js --profile staging",
    "test:prod": "NODE_ENV=production cucumber-js --profile prod",
    "test:local": "npm run test:dev",
    
    "___COMMENT_CI___": "=== Tests CI/CD ===",
    "test:ci": "npm run test:smoke && npm run test:regression",
    "test:ci-full": "npm run test:all",
    "test:pre-commit": "npm run typecheck && npm run lint && npm run test:smoke",
    "test:pre-push": "npm run test:regression",
    
    "___COMMENT_PLAYWRIGHT___": "=== Tests Playwright directs ===",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:chrome": "playwright test --project=chromium-desktop",
    "test:playwright:firefox": "playwright test --project=firefox-desktop",
    "test:playwright:safari": "playwright test --project=webkit-desktop",
    
    "___COMMENT_REPORTS___": "=== Rapports et analyse ===",
    "report:open": "npx playwright show-report reports/playwright-report",
    "report:cucumber": "open reports/cucumber-report.html",
    "report:generate": "node scripts/generate-test-report.js",
    "report:coverage": "nyc report --reporter=html --reporter=text",
    "report:merge": "node scripts/merge-reports.js",
    
    "___COMMENT_UTILS___": "=== Utilitaires ===",
    "setup": "npm install && npm run build:packages && playwright install && npm run build",
    "setup:full": "npm run clean && npm run setup",
    "setup:workspace": "npm install --workspaces && npm run build:packages",
    "deps:update": "npm update",
    "deps:update:workspace": "npm update --workspaces",
    "deps:audit": "npm audit",
    "deps:audit:fix": "npm audit fix",
    
    "___COMMENT_LINT___": "=== Linting et formatage ===",
    "lint": "eslint tests/**/*.ts apps/**/*.ts packages/**/*.ts *.config.ts",
    "lint:fix": "eslint tests/**/*.ts apps/**/*.ts packages/**/*.ts *.config.ts --fix",
    "lint:check": "eslint tests/**/*.ts apps/**/*.ts packages/**/*.ts *.config.ts --max-warnings 0",
    "lint:workspace": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    
    "___COMMENT_DATA___": "=== Gestion des donnÃ©es de test ===",
    "data:setup": "node scripts/setup-test-data.js",
    "data:cleanup": "node scripts/cleanup-test-data.js",
    "data:reset": "npm run data:cleanup && npm run data:setup",
    "data:validate": "node scripts/validate-test-data.js",
    "data:fixtures": "node scripts/generate-fixtures.js",
    
    "___COMMENT_MAINTENANCE___": "=== Maintenance ===",
    "maintenance:logs": "node scripts/cleanup-logs.js",
    "maintenance:cache": "node scripts/clear-cache.js",
    "maintenance:full": "npm run clean && npm run maintenance:logs && npm run maintenance:cache",
    "maintenance:workspace": "npm run clean --workspaces"
  },
  
  "keywords": [
    "testing",
    "bdd",
    "cucumber",
    "playwright",
    "typescript",
    "automation",
    "e2e",
    "multi-app",
    "gherkin",
    "monorepo",
    "workspace",
    "nextjs"
  ],
  
  "author": {
    "name": "Khalid Ksouri",
    "email": "khalid_ksouri@yahoo.fr"
  },
  
  "license": "MIT",
  
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  
  "repository": {
    "type": "git",
    "url": "https://github.com/khalidksouri/multi-app-testing-suite.git"
  },
  
  "bugs": {
    "url": "https://github.com/khalidksouri/multi-app-testing-suite/issues"
  },
  
  "homepage": "https://github.com/khalidksouri/multi-app-testing-suite#readme",
  
  "dependencies": {
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21"
  },
  
  "devDependencies": {
    "@cucumber/cucumber": "^10.9.0",
    "@playwright/test": "^1.54.1",
    "playwright": "^1.54.1",
    
    "typescript": "^5.8.3",
    "ts-node": "^10.9.2",
    "@types/node": "^20.8.0",
    "@types/lodash": "^4.14.200",
    
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "wait-on": "^7.0.1",
    
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cucumber": "^2.0.0",
    "eslint-plugin-playwright": "^0.18.0",
    
    "prettier": "^3.0.3",
    
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    
    "nyc": "^15.1.0",
    "c8": "^8.0.1",
    
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "inquirer": "^8.2.6"
  },
  
  "optionalDependencies": {
    "playwright-core": "^1.54.1"
  },
  
  "peerDependencies": {
    "typescript": ">=4.7.0"
  },
  
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.feature": [
      "prettier --write --parser yaml"
    ]
  },
  
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:pre-push",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": false,
    "all": true,
    "include": [
      "apps/**/*.ts",
      "apps/**/*.tsx",
      "packages/**/*.ts", 
      "packages/**/*.tsx",
      "tests/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.config.ts",
      "**/*.config.js",
      "**/dist/**",
      "**/.next/**",
      "**/coverage/**",
      "**/reports/**",
      "**/node_modules/**"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  },
  
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  
  "volta": {
    "node": "18.18.0",
    "npm": "9.8.1"
  },
  
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  
  "config": {
    "workspaces": {
      "apps": [
        "ai4kids-app",
        "multiai-app", 
        "budgetcron-app",
        "unitflip-app",
        "postmath-app"
      ],
      "packages": [
        "shared",
        "ui"
      ]
    }
  }
}