{
  "name": "math4child",
  "version": "2.0.0",
  "description": "Math4Child - Application Ã©ducative avec paiements Stripe",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --quiet",
    "lint:fix": "next lint --fix || true",
    "type-check": "tsc --noEmit",
    "test": "playwright test",
    "test:stripe": "playwright test tests/e2e/stripe-*.spec.ts",
    "test:stripe:quick": "playwright test tests/critical/stripe-critical.spec.ts",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "build:netlify": "./scripts/netlify-build.sh",
    "build:preview": "npm run build && npm run test:stripe:quick",
    "clean": "rm -rf .next out dist node_modules/.cache",
    "build:prod": "next build",
    "build:safe": "npm run lint:fix && npm run build:prod",
    "lint:quiet": "next lint --quiet || true",
    "dev:clean": "rm -rf .next && npm run dev",
    "clean:all": "rm -rf .next out dist node_modules/.cache backup",
    "type-check:safe": "tsc --noEmit || true",
    "test:translation": "playwright test --config=playwright.config.translation.ts",
    "test:translation:report": "playwright show-report playwright-report/translation",
    "watch:translations": "node scripts/translation-watcher.js",
    "translation:setup": "chmod +x scripts/setup-translation-tests.sh && scripts/setup-translation-tests.sh",
    "translation:run-all": "npm run test:translation && npm run test:translation:report",
    "test:mobile": "playwright test --config=playwright.config.mobile.ts --project=android-chrome,iphone-safari",
    "test:mobile:android": "playwright test --config=playwright.config.mobile.ts --project=android-chrome,android-tablet",
    "test:mobile:ios": "playwright test --config=playwright.config.mobile.ts --project=iphone-safari,iphone-plus-safari,ipad-safari",
    "test:apk:android": "playwright test --config=playwright.config.mobile.ts --project=android-apk-debug",
    "test:apk:android:release": "playwright test --config=playwright.config.mobile.ts --project=android-apk-release",
    "test:app:ios": "playwright test --config=playwright.config.mobile.ts --project=ios-app-debug",
    "test:app:ios:release": "playwright test --config=playwright.config.mobile.ts --project=ios-app-release",
    "test:pwa": "playwright test --config=playwright.config.mobile.ts --project=pwa-android,pwa-ios",
    "build:android:debug": "CAPACITOR_BUILD=true npm run build && npx cap sync android && cd android && ./gradlew assembleDebug",
    "build:android:release": "CAPACITOR_BUILD=true npm run build && npx cap sync android && cd android && ./gradlew assembleRelease",
    "build:ios:debug": "CAPACITOR_BUILD=true npm run build && npx cap sync ios",
    "build:ios:release": "CAPACITOR_BUILD=true npm run build && npx cap sync ios && xcodebuild -workspace ios/App/App.xcworkspace -scheme App -configuration Release",
    "cap:serve": "npx cap serve --external",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:sync": "npx cap sync",
    "cap:update": "npx cap update",
    "deploy:android:dev": "npm run build:android:debug && adb install -r android/app/build/outputs/apk/debug/app-debug.apk",
    "deploy:ios:dev": "npm run build:ios:debug && npx cap run ios --target='iPhone 14'",
    "deploy:android:prod": "npm run build:android:release && adb install -r android/app/build/outputs/apk/release/app-release.apk",
    "deploy:ios:prod": "npm run build:ios:release",
    "test:mobile:all": "playwright test --config=playwright.config.mobile.ts",
    "test:mobile:headed": "playwright test --config=playwright.config.mobile.ts --headed",
    "test:mobile:ui": "playwright test --config=playwright.config.mobile.ts --ui",
    "test:mobile:debug": "playwright test --config=playwright.config.mobile.ts --debug",
    "clean:mobile": "rm -rf android ios && npx cap add android && npx cap add ios",
    "health:mobile": "npm run cap:sync && npm run test:mobile -- --timeout=10000 --max-failures=1",
    "test:arabic-update": "playwright test tests/translation/arabic-languages-update.spec.ts"
  },
  "dependencies": {
    "@stripe/stripe-js": "4.7.0",
    "crypto-js": "4.2.0",
    "date-fns": "3.6.0",
    "lucide-react": "0.469.0",
    "next": "14.2.30",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "recharts": "2.12.7",
    "stripe": "16.12.0"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/app": "^7.0.1",
    "@capacitor/cli": "^6.2.1",
    "@capacitor/core": "^7.4.2",
    "@capacitor/haptics": "^7.0.1",
    "@capacitor/ios": "^7.4.2",
    "@capacitor/keyboard": "^7.0.1",
    "@capacitor/splash-screen": "^7.0.1",
    "@capacitor/status-bar": "^7.0.1",
    "@playwright/test": "^1.48.0",
    "@types/chokidar": "^1.7.5",
    "@types/crypto-js": "4.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.8",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "autoprefixer": "10.4.20",
    "chokidar": "^4.0.3",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.30",
    "fs-extra": "^11.3.0",
    "postcss": "8.4.47",
    "tailwindcss": "3.4.13",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
