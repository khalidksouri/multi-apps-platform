{
  "name": "math4child",
  "version": "4.2.0",
  "description": "🎯 Math4Child v4.2.0 - Révolution Éducative Mondiale + Déploiement Automatique",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint . --fix",
    "build:production": "NODE_ENV=production NEXT_PUBLIC_APP_ENV=production next build",
    "build:staging": "NODE_ENV=staging NEXT_PUBLIC_APP_ENV=staging next build",
    "build:development": "NODE_ENV=development NEXT_PUBLIC_APP_ENV=development next build",
    "build:preview": "NODE_ENV=preview NEXT_PUBLIC_APP_ENV=preview next build",
    "build:force": "ESLINT_NO_DEV_ERRORS=true next build",
    "build:no-lint": "next build --no-lint",
    "build:safe": "npm run lint:fix && npm run build:force",
    "branch:info": "node -e \"console.log('🌿 Branche:', process.env.BRANCH || process.env.HEAD || 'local'); console.log('📍 Env:', process.env.NEXT_PUBLIC_APP_ENV || 'development')\"",
    "deploy:check": "node -e \"console.log('🚀 Config déploiement OK'); console.log('📁 Base: apps/math4child'); console.log('📂 Publish: apps/math4child/out')\"",
    "test": "playwright test",
    "test:e2e": "echo '🧪 Tests E2E innovations - manuscrit + vocal + ar3d'",
    "test:stress": "echo '⚡ Tests performance - optimisés'",
    "clean": "rm -rf .next out node_modules/.cache",
    "clean:full": "rm -rf .next out node_modules && npm install",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report"
  },
  "dependencies": {
    "@types/node": "20.8.0",
    "@types/react": "18.2.25",
    "@types/react-dom": "18.2.10",
    "next": "^14.2.32",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.2.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "autoprefixer": "10.4.16",
    "eslint": "8.51.0",
    "eslint-config-next": "14.0.0",
    "postcss": "8.4.31",
    "tailwindcss": "3.3.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "education",
    "mathematics",
    "children",
    "ai",
    "handwriting",
    "voice",
    "ar3d",
    "nextjs",
    "typescript",
    "multilingual",
    "gamification"
  ],
  "author": "Math4Child Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/khalidksouri/multi-apps-platform.git",
    "directory": "apps/math4child"
  },
  "bugs": {
    "url": "https://github.com/khalidksouri/multi-apps-platform/issues"
  },
  "homepage": "https://math4child.com"
}
