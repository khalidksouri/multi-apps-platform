{
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:netlify": "./scripts/netlify-build.sh",
    "build:preview": "npm run build && npm run test:stripe:quick",
    "start": "next start",
    "lint": "next lint --quiet",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "playwright test",
    "test:stripe": "playwright test tests/e2e/stripe-*.spec.ts",
    "test:stripe:quick": "./scripts/stripe-quick-tests.sh",
    "test:critical": "playwright test tests/critical/ --config=playwright-netlify.config.ts",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "clean": "rm -rf .next out dist node_modules/.cache",
    "analyze": "ANALYZE=true npm run build",
    "netlify:dev": "netlify dev",
    "netlify:deploy": "netlify deploy --prod"
  }
}
