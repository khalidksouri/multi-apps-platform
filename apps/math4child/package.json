{
  "name": "math4child",
  "version": "4.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:production",
    "build:production": "NEXT_PUBLIC_ENVIRONMENT=production NODE_ENV=production next build",
    "build:staging": "NEXT_PUBLIC_ENVIRONMENT=staging NODE_ENV=development next build",
    "build:development": "NEXT_PUBLIC_ENVIRONMENT=development NODE_ENV=development next build",
    "build:preview": "NEXT_PUBLIC_ENVIRONMENT=preview NODE_ENV=development next build",
    "build:safe": "npm run build:staging || (mkdir -p out && echo \"<!DOCTYPE html><html><head><title>Math4Child v4.2.0</title></head><body><h1>Math4Child v4.2.0</h1><p>Build en cours...</p></body></html>\" > out/index.html)",
    "start": "next start",
    "lint": "next lint",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "branch:info": "node -e \"console.log(\"Branch:\", process.env.BRANCH || process.env.VERCEL_GIT_COMMIT_REF || \"local\")\"",
    "deploy:check": "npm run branch:info && npm run build:safe"
  },
  "dependencies": {
    "next": "^14.0.0",
    "playwright": "^1.54.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "@playwright/test": "^1.40.0"
  }
}