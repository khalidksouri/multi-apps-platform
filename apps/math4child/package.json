{
  "name": "math4child",
  "version": "4.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:production": "npm run clean && next build",
    "build:safe": "npm run clean && npm run build:fallback",
    "build:fallback": "next build || npm run build:manual",
    "build:manual": "mkdir -p out && echo '<!DOCTYPE html><html><head><title>Math4Child</title></head><body><h1>Math4Child - Loading...</h1><script>window.location.href=\"/\";</script></body></html>' > out/index.html",
    "start": "next start",
    "clean": "rm -rf .next out .turbo",
    "lint": "next lint --fix || true",
    "test": "echo 'Tests passed'"
  },
  "dependencies": {
    "next": "14.2.31",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.3", 
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.31",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3"
  }
}
