{
  "root": true,
  "extends": [
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "react-hooks/exhaustive-deps": "warn",
    "prefer-const": "error",
    "no-console": "off",
    "react/no-unescaped-entities": "off",
    "@next/next/no-html-link-for-pages": "off"
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "*.config.js",
    "build-prod.sh",
    "start-dev.sh"
  ]
}
