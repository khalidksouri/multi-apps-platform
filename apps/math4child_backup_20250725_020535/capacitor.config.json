{
  "appId": "com.gotest.math4child",
  "appName": "Math4Child",
  "webDir": "out",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https",
    "iosScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#667eea",
      "showSpinner": false
    },
    "StatusBar": {
      "style": "light",
      "backgroundColor": "#667eea"
    },
    "Keyboard": {
      "resize": "body",
      "style": "dark"
    }
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": false
  },
  "ios": {
    "scheme": "Math4Child",
    "contentInset": "automatic"
  }
}
